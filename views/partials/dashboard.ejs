<div class="app-wrapper">

    <div class="app-content pt-3 p-md-3 p-lg-4">
        <div class="container-xl">

            <h1 class="app-page-title">Overview</h1>

            <div class="row g-4 mb-4">
                <div class="col-6 col-lg-3">
                    <div class="app-card app-card-stat shadow-sm h-100">
                        <div class="app-card-body p-3 p-lg-4">
                            <h4 class="stats-type mb-1">Pending Received Vouchers</h4>
                            <div class="stats-figure">
                                <%=rPendCount%>
                            </div>
                        </div>
                        <!--//app-card-body-->

                    </div>
                    <!--//app-card-->
                </div>
                <!--//col-->

                <div class="col-6 col-lg-3">
                    <div class="app-card app-card-stat shadow-sm h-100">
                        <div class="app-card-body p-3 p-lg-4">
                            <h4 class="stats-type mb-1">Pending Issue Vouchers</h4>
                            <div class="stats-figure">
                                <%=iPendCount%>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="col-6 col-lg-3">
                    <div class="app-card app-card-stat shadow-sm h-100">
                        <div class="app-card-body p-3 p-lg-4">
                            <h4 class="stats-type mb-1">Most exchanged item</h4>
                            <div class="stats-figure">
                                <h4>

                                    <%=mostExchanged.Name%>
                                </h4>
                            </div>
                        </div>
                        <!--//app-card-body-->

                    </div>
                    <!--//app-card-->
                </div>
                <!--//col-->
                <div class="col-6 col-lg-3">
                    <div class="app-card app-card-stat shadow-sm h-100">
                        <div class="app-card-body p-3 p-lg-4">
                            <h4 class="stats-type mb-1">Item in highest demand</h4>
                            <div class="stats-figure">
                                <h4>

                                    <%=mostDemand.Name%>
                                </h4>
                            </div>
                        </div>
                        <!--//app-card-body-->

                    </div>
                    <!--//app-card-->
                </div>

            </div>
            <div class="row g-4 mb-4">
                <div class="col-12 col-lg-6">
                    <div class="app-card app-card-chart h-100 shadow-sm">
                        <div class="app-card-header p-3">
                            <div class="row justify-content-between align-items-center">
                                <div class="col-auto">
                                    <h4 class="app-card-title">Issued Voucher Distribution</h4>
                                </div>

                            </div>
                            <!--//row-->
                        </div>
                        <!--//app-card-header-->
                        <div class="app-card-body p-3 p-lg-4">
                            <div class="mb-3 d-flex">
                                <select id="iv-doughnut"
                                    class="form-select form-select-sm ms-auto d-inline-flex w-auto">
                                    <option value="today">Today</option>
                                    <option value="week" selected>This week</option>
                                    <option value="month">This Month</option>
                                    <option value="year">This Year</option>
                                    <option value="all">This Year</option>
                                </select>
                            </div>
                            <div class="chart-container">
                                <canvas id="chart-doughnut"></canvas>
                            </div>
                        </div>
                        <!--//app-card-body-->
                    </div>
                    <!--//app-card-->
                </div>
                <!--//col-->
                <div class="col-12 col-lg-6">
                    <div class="app-card app-card-chart h-100 shadow-sm">
                        <div class="app-card-header p-3">
                            <div class="row justify-content-between align-items-center">
                                <div class="col-auto">
                                    <h4 class="app-card-title">Items Issued Chart</h4>
                                </div>

                                <!--//col-->
                            </div>
                            <!--//row-->
                        </div>
                        <!--//app-card-header-->
                        <div class="app-card-body p-3 p-lg-4">
                            <div class="mb-3 d-flex">
                                <select class="form-select form-select-sm ms-auto d-inline-flex w-auto" id="ii-bar">
                                    <option value="week" selected>This week</option>
                                    <option value="month">This Month</option>
                                    <option value="year">This Year</option>
                                    <option value="all">All</option>
                                </select>
                            </div>
                            <div class="chart-container">
                                <canvas id="canvas-barchart"></canvas>
                            </div>
                        </div>
                        <!--//app-card-body-->
                    </div>
                    <!--//app-card-->
                </div>
                <!--//col-->

            </div>
            <!--//row-->
            <div class="row g-4 mb-4">
                <div class="col-12 col-lg-6">
                    <div class="app-card app-card-progress-list h-100 shadow-sm">
                        <div class="app-card-header p-3">
                            <div class="row justify-content-between align-items-center">
                                <div class="col-auto">
                                    <h4 class="app-card-title">five Least Receival Most Issual Items Ratio</h4>
                                </div>
                                <!--//col-->

                            </div>
                            <!--//row-->
                        </div>
                        <!--//app-card-header-->
                        <div class="app-card-body" id="lri-ratio">


                        </div>
                        <!--//app-card-body-->
                    </div>
                    <!--//app-card-->
                </div>
                <!--//col-->
                <div class="col-12 col-lg-6">
                    <div class="app-card app-card-stats-table h-100 shadow-sm">
                        <div class="app-card-header p-3">
                            <div class="row justify-content-between align-items-center">
                                <div class="col-auto">
                                    <h4 class="app-card-title">Five Least Quantity Items</h4>
                                </div>
                                <!--//col-->

                            </div>
                            <!--//row-->
                        </div>
                        <!--//app-card-header-->
                        <div class="app-card-body p-3 p-lg-4">
                            <div class="table-responsive">
                                <table class="table table-borderless mb-0">
                                    <thead>
                                        <tr>
                                            <th class="meta">Item</th>
                                            <th class="meta stat-cell">ID</th>
                                            <th class="meta stat-cell">Quantity</th>
                                        </tr>
                                    </thead>
                                    <tbody id="least-five">
                                    </tbody>
                                </table>
                            </div>
                            <!--//table-responsive-->
                        </div>
                        <!--//app-card-body-->
                    </div>
                    <!--//app-card-->
                </div>
                <!--//col-->
            </div>
            <!--//row-->
            <!--//container-fluid-->
        </div>
        <!--//app-content-->

        <%- include('../partials/footer'); %>
            <!--//app-footer-->

    </div>

</div>
<script>
    fetch('http://192.168.1.89:3000/charts/ds')
        .then(response => response.json())
        .then(result => {
            //loop result
            result.forEach(element => {
                document.getElementById('least-five').innerHTML += `<tr>
                                            <td>${element.Name}</td>
                                            <td class="stat-cell">${element.ID}</td>
                                            <td class="stat-cell">${element.Quantity}</td>
                                        </tr>`

            });
        })
    fetch('http://192.168.1.89:3000/charts/lri')
        .then(response => response.json())
        .then(result => {
            //loop result
            result.forEach(element => {
                document.getElementById('lri-ratio').innerHTML += `<div class="item p-3">
                                            <div class="row align-items-center">
                                                <div class="col">
                                                    <div class="title mb-1 ">${element.Name}</div>
                                                    <div class="progress">
                                                        <div class="progress-bar bg-success" role="progressbar" style="width: ${element.riRatio * 100}%" aria-valuenow="${element.riRatio * 100}" aria-valuemin="0" aria-valuemax="100"></div>
                                                    </div>
                                                </div>
                                                <div class="col-auto">
                                                    ${Math.round(element.riRatio * 100)}%
                                                </div>
                                                <!--//col-->
                                            </div>
                                            <!--//row-->
                                        </div>`
            });
        })
</script>
<script src="/assets/js/plugins/chart.js/chart.min.js"></script>
<script src="/assets/js/index-charts.js"></script>
