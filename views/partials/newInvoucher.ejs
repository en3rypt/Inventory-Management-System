<div class="app-wrapper">

    <div class="app-content pt-3 p-md-3 p-lg-4">
        <div class="container-xl">

            <div class="row g-3 mb-4 align-items-center justify-content-between">
                <div class="col-auto">
                    <h1 class="app-page-title mb-0">Categories</h1>
                </div>


                <form action="/invouchers" method="POST">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="recipient-name" class="col-form-label">Invoucher
                                ID:</label>
                            <input type="text" class="form-control" id="req-supplierid" name="reqid" required>
                        </div>
                        <div class="mb-3">
                            <label for="recipient-name" class="col-form-label">Supplier
                                ID:</label>
                            <input type="text" class="form-control" id="req-supplierid" name="reqsupplierid" required>
                        </div>
                        <div id="message-validate" class="mb-3 d-none">
                            <div class="alert alert-danger" role="alert">
                                <strong>
                                    Please add items to the list before submitting.
                                </strong>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="message-text" class="col-form-label">Add
                                items:</label><br>
                            <ul class="added-items-ul">

                            </ul>
                            <select id="item-name-drop">
                                <% itemRows.forEach(function(item) { %>
                                    <option value="<%= item.ID %>">
                                        <%= item.Name %>
                                    </option>
                                    <% }) %>
                            </select>
                            <input class="form-control w-75 d-inline" id="item-quantity" type="number" min="0" step="1"
                                placeholder="Quantity" required>
                            <button type="button" id="req-item-add" class="btn app-btn-secondary">Add</button>
                            <input type="text" id="added-JSON" name="addedJSON" class="d-none">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <input type="submit" id="submit-btn-iv" class="btn btn-primary">
                    </div>
                </form>


                <!--//col-auto-->
            </div>
            <!--//tab-content-->



        </div>
        <!--//container-fluid-->
    </div>
    <!--//app-content-->

    <footer class="app-footer">

    </footer>
    <!--//app-footer-->

</div>